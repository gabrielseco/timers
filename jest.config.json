{
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coveragePathIgnorePatterns" : ["<rootDir>/config" ],
  "coverageThreshold": {
    "global": {
      "branches": 0,
      "functions": 0,
      "lines": 0,
      "statements": 0
    }
  },
  "notify": true,
  "moduleNameMapper": {
    "\\.(scss)$": "<rootDir>/node_modules/jest-css-modules"
  },
  "roots": [
    "<rootDir>/src"
  ],
  "setupFiles": [
    "<rootDir>/config/jest/test-shim.js",
    "<rootDir>/config/jest/test-setup.js"
  ],
  "transform": {
    "^.+\\.js$": "babel-jest"
  },
  "verbose": true
}